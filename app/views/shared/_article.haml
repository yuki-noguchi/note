.content
  .content__user.clearfix
    .content__user__avatar
      = link_to user_path(article.user.id) do
        = user_avatar(article)
    .content__user__name
      = link_to user_nickname(article), user_path(article.user.id)
    .content__user__time
      = link_to article.created_at, article_path(article)
  .content__article
    .content__article__image
      = article_image(article)
    .content__article__title
      = link_to article.title, article_path(article)
    .content__article__body
      = simple_format(article.body)
    .content__article__more
      = link_to 'もっとみる', article_path(article)
